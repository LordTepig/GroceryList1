<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".GroceryListFragment">


    <TextView
        android:id="@+id/starting_welcome_message_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/starting_welcome"
        android:textSize="18sp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="#39B9DC"/>

    <Button
        android:id="@+id/add_item_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_item"
        android:backgroundTint="#39B9DC"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/starting_welcome_message_text_view"
        />

    <TextView
        android:id="@+id/blank_grocery_slot1"
        android:layout_width= "wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginTop="16dp"
        android:layout_marginStart="24dp"
        app:layout_constraintTop_toBottomOf="@id/add_item_button"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/blank_grocery_slot2"
        android:layout_width= "wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginTop="16dp"
        android:layout_marginStart="24dp"
        app:layout_constraintTop_toBottomOf="@id/blank_grocery_slot1"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/blank_grocery_slot3"
        android:layout_width= "wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginTop="16dp"
        android:layout_marginStart="24dp"
        app:layout_constraintTop_toBottomOf="@id/blank_grocery_slot2"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/blank_grocery_slot4"
        android:layout_width= "wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginTop="16dp"
        android:layout_marginStart="24dp"
        app:layout_constraintTop_toBottomOf="@id/blank_grocery_slot3"
        app:layout_constraintStart_toStartOf="parent"
        />


    <TextView
        android:id="@+id/blank_grocery_slot5"
        android:layout_width= "wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginTop="16dp"
        android:layout_marginStart="24dp"
        app:layout_constraintTop_toBottomOf="@id/blank_grocery_slot4"
        app:layout_constraintStart_toStartOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>